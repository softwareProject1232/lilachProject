<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="561.0" prefWidth="791.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.SecondaryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="Item: ">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
      <Label fx:id="NameLabel" text="Item name">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
      <Button fx:id="GoBackButton" mnemonicParsing="false" onAction="#switchToCatalogWindow" prefHeight="48.0" prefWidth="118.0" text="Go Back" translateX="-200.0" translateY="200.0">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="updatePrice" mnemonicParsing="false" onAction="#changeToPriceWindow" prefHeight="48.0" prefWidth="134.0" text="Update Price" translateX="200.0" translateY="140.0">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label fx:id="DescriptionLabel" text="Description...." translateY="-100.0">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="priceText" text="Price:" translateY="-50.0">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
   </children>
</VBox>
